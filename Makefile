# =============================================================================
# Default target
# =============================================================================
all: build


# =============================================================================
# Build
# =============================================================================
.PHONY: build
build: format lint mod-update


# =============================================================================
# Format
# =============================================================================
.PHONY: format
format:
	@echo "Formatting ..."
	@gofmt -s -l -w .


# =============================================================================
# Lint
# =============================================================================
.PHONY: lint
lint:
	@echo "Linting ..."
	@golangci-lint run


# =============================================================================
# Modules
# =============================================================================
.PHONY: mod-update
mod-update:
	@echo "Updating modules ..."
	@go get -d -u -v ./...
	@go mod tidy
